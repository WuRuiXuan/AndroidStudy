<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NotificationsActivity"
    android:gravity="center">

    <Button
        android:id="@+id/btn_normal_notification"
        android:text="发送一个普通的通知"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendNormalNotification"/>

    <Button
        android:id="@+id/btn_big_view_notification"
        android:text="发送一个大视图的通知"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_normal_notification"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendBigViewNotification"/>

    <Button
        android:id="@+id/btn_progress_bar_notification"
        android:text="发送一个带进度条的通知"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_big_view_notification"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendProgressBarNotification"/>

</RelativeLayout>